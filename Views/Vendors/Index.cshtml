@model IEnumerable<INF_SP.Models.Vendor>

@{
    ViewData["Title"] = "Vendor Directory";
}

<div class="container mt-4">
    <h2>Vendor Directory</h2>
    
    <form asp-action="Index" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="Search vendors..." value="@ViewData["SearchString"]">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </form>

    <div class="row">
        @if (Model.Any())
        {
            @foreach (var vendor in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@vendor.BusinessName</h5>
                            <p class="badge bg-info text-dark">@vendor.ServiceType</p>
                            <p class="card-text">@vendor.Description.Substring(0, Math.Min(100, vendor.Description.Length))...</p>
                            <p class="text-muted">
                                <strong>Price Range:</strong> @vendor.PriceRange
                            </p>
                        </div>
                        <div class="card-footer">
                            <a asp-action="Details" asp-route-id="@vendor.Id" class="btn btn-primary btn-sm">View Profile</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">No vendors found.</div>
            </div>
        }
    </div>
</div>